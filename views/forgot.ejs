<!doctype html>
<html>
<head>
    <title>E Touch Systems</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span>Forgot Password</h1>

    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>

    <!-- LOGIN FORM -->
    <form action="/signup" method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
       

        <button type="submit" class="btn btn-warning btn-lg">Reset My Password</button>
    </form>

    <hr>

    <p>Already Know password? <a href="/login">Login</a>&nbsp;&nbsp;&nbsp;Or go <a href="/">home</a>.</p>
    <p></p>

  

</div>
</div>
</body>
</html>
